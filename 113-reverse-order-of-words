public String reverseWordsInASentence(String sentence){
    //your flawless code here
    if(sentence == null) return '';
    else
    {
        List<String> sentenceSplit = sentence.trim().split(' ');
        String newSentenceSplit='';
        for(Integer i = sentenceSplit.size()-1; i>=0; i--)
        {
            String str = sentenceSplit[i];
            system.debug(str);
            newSentenceSplit = newSentenceSplit + str +' ';
        }
        return newSentenceSplit;
    }

}