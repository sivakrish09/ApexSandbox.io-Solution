public String reverseWordsInASentence(String sentence){

    //your flawless code here

    if(sentence ==  null){

        return null;

    }else{

        String output = '';

        String[] lstSen = sentence.split(' ');

        for (Integer i = lstSen.size()-1; i >=0; i--) {

           String x= lstSen[i] + ' ';

           output +=x;

        }

        return output.trim();

    }

}