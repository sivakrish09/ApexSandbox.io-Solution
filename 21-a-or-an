public String aOrAn(String word) {
    String result = (word.startsWithIgnoreCase('a') || word.startsWithIgnoreCase('e') ||
                     word.startsWithIgnoreCase('i') || word.startsWithIgnoreCase('o') ||
                     word.startsWithIgnoreCase('u')) ? 'an ' + word : 'a ' + word;
    return result;
}
